{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"],
            "@/lib/*": ["./src/lib/*"],
            "@/types": ["./src/types"],
            "@/stores": ["./src/stores"],
            "@/hooks/*": ["./src/hooks/*"],
            "@/config/*": ["./src/config/*"],
            "@/assets/*": ["./src/assets/*"],
            "@/styles/*": ["./src/styles/*"],
            "@/ui/*": ["./src/components/ui/*"],
            "@/components/*": ["./src/components/*"]
        },
        "baseUrl": "."
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
